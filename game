            text-shadow: 0 0 10px rgba(255, 20, 147, 0.5);
        }

        .password-error.show {
            opacity: 1;
        }

        .logout-btn {
            position: fixed;
            top: 20px;
            right: 20px;
            background: #00ff41;
            color: #000000;
            font-weight: 600;
            border: none;
            padding: 10px 20px;
            border-radius: 20px;
            cursor: pointer;
            transition: all 0.3s ease;
            font-size: 14px;
            z-index: 1000;
        }

        .logout-btn:hover {
            background: #00ff65;
            transform: translateY(-1px);
            box-shadow: 0 5px 15px rgba(0, 255, 65, 0.4);
        }

